<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Khaatabook</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <header class="flex justify-between items-center p-5 bg-white shadow-sm">
        <div class="text-xl font-bold text-gray-800">Khaatabook</div>
        <nav class="flex gap-5">
            <a href="/" class="text-gray-800 hover:text-gray-600">Home</a>
            <a href="/create" class="text-gray-800 hover:text-gray-600">Create New Hisaab</a>
        </nav>
    </header>

    <div class="container mx-auto p-5 max-w-7xl">
        <h1 class="text-2xl text-gray-800 mb-5">All Hisaab Kitaab</h1>
        
        <div class="w-1/2 flex flex-col gap-2.5">
          <% if (files.length > 0) { %>
            <% files.forEach(element => { %>
              <div class="flex justify-between items-center bg-blue-500 hover:bg-blue-600 p-4 rounded-lg text-white cursor-pointer transition-colors duration-200">
                <span class="text-base"><%= element.split('.') %></span>
                <div class="flex gap-4">
                  <a href="/edit/<%= element %>" class="opacity-90 hover:opacity-100">
                    <span class="text-xl">📝</span>
                  </a>
                  <a href="/delete/<%= element %>" class="opacity-90 hover:opacity-100">
                    <span class="text-xl">🗑️</span>
                  </a>
                </div>
              </div>
            <% }) %>
          <% } else { %>
              <h1 class="text-xl text-gray-800">Empty list</h1>
          <% } %>
        </div>
    </div>
</body>
</html>